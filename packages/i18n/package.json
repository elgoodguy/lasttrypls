{
  "name": "@repo/i18n",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./locales/*": {
      "import": "./dist/locales/*.mjs",
      "require": "./dist/locales/*.js",
      "types": "./dist/locales/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --out-dir dist --metafile --sourcemap",
    "dev": "tsup --watch",
    "clean": "rimraf .turbo node_modules dist",
    "validate": "tsc --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "tsup": "^8.0.2",
    "typescript": "^5.3.3"
  }
}