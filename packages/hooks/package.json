{
  "name": "@repo/hooks",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/index.umd.js",
  "module": "./dist/index.es.js",
  "types": "./dist/types/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    }
  },
  "scripts": {
    "build": "vite build && pnpm build:types && pnpm copy:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist/types",
    "copy:types": "cp -r dist/types/index.d.ts dist/index.d.ts && cp -r dist/types/index.d.ts dist/index.d.mts",
    "dev": "vite build --watch",
    "dev:with-types": "concurrently \"vite build --watch\" \"pnpm build:types -- --watch\"",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "clean": "rimraf dist .turbo"
  },
  "dependencies": {
    "react": "^18.2.0",
    "sonner": "^2.0.3"
  },
  "devDependencies": {
    "@repo/tsconfig": "workspace:*",
    "@types/google.maps": "^3.58.1",
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "typescript": "^5.0.2",
    "vite": "^4.4.5",
    "vite-plugin-dts": "^4.5.3"
  }
}
