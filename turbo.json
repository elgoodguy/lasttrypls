{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "lint:fix": {
      "outputs": [],
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "clean": {
      "outputs": ["dist/**", ".turbo/**", "node_modules/.cache/turbo/**"]
    },
    "db:generate": {
      "cache": false,
      "inputs": ["supabase/migrations/**"]
    }
  }
}
