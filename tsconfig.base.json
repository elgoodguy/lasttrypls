{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@repo/ui/*": ["packages/ui/src/*"],
      "@repo/types/*": ["packages/types/src/*"],
      "@repo/api-client/*": ["packages/api-client/src/*"],
      "@repo/hooks/*": ["packages/hooks/src/*"],
      "@repo/i18n": ["packages/i18n/src/index.ts"],
      "@repo/tsconfig/*": ["packages/tsconfig/src/*"],
      "@repo/typescript-config/*": ["packages/typescript-config/src/*"],
      "@repo/eslint-config/*": ["packages/eslint-config/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".turbo"]
}
